<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hallo ðŸ‘‹"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deine Ãœbersicht"
        android:textSize="14sp"
        android:alpha="0.75"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Kachel: NÃ¤chster Termin -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardNextEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/tvNextEventLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃ¤chster Termin"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvNextEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noch keine Termine/Geburtstage"
                android:layout_marginTop="8dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNextEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FÃ¼ge einen Termin im Kalender hinzu."
                android:layout_marginTop="4dp"
                android:alpha="0.75"
                android:textSize="13sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Buttons -->
    <Button
        android:id="@+id/btnOpenPersons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Personen ansehen"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/cardNextEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
