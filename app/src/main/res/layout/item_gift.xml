<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivGift"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvGiftName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apple Watch"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivGift"
        app:layout_constraintEnd_toStartOf="@id/tvPrice"
        app:layout_constraintTop_toTopOf="@id/ivGift"
        android:layout_marginStart="12dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notiz / Budget"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tvGiftName"
        app:layout_constraintTop_toBottomOf="@id/tvGiftName"
        app:layout_constraintEnd_toStartOf="@id/tvPrice"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¬399"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvGiftName"/>

</androidx.constraintlayout.widget.ConstraintLayout>